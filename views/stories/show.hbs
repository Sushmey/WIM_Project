<div class="my-1 py-2 d-flex justify-content-between flex-wrap-reverse">
    <div class="col-sm-12 col-lg-6 p-1 d-flex flex-wrap justify-content-around card center-align border-0">
        <div>
            <h3  class="card-title fw-bold">{{story.title}}
                <small>{{{editIcon story.user user story._id false}}}</small>
            </h3> 
            <span class="small">{{formatDate date 'MMMM Do YYYY'}}</span>
        </div>
        <div class="">
            <div class="card-content">
                {{{story.body}}}
            </div>
        </div>
    </div>
    <div class="">
        <div class="card center-align">
            <div class="card-content">
                <span class="card-title">{{story.user.displayName}}</span>
                <img src="{{story.user.image}}" class="rounded-circle">
            </div>
            <div class="card-action">
                <a href="/stories/user/{{story.user._id}}">More From {{story.user.firstName}}</a>
            </div>
        </div>
    </div>
</div>